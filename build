#!/bin/bash

docker stop feedread
docker rm feedread
docker rmi feedread

set -e

# make image
docker build -t feedread .
docker rmi `docker images --filter label=stage=builder -q`

docker run -idt \
-v $(pwd)/feedread.sqlite3:/app/feedread.sqlite3 \
-v $(pwd)/grab.log:/app/grab.log \
--name feedread -p 3008:80 feedread
